<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StarKotlin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/Custom.TextAppearance.Headline2</item>
        <item name="textAppearanceHeadline3">@style/Custom.TextAppearance.Headline3</item>
        <item name="textAppearanceHeadline4">@style/Custom.TextAppearance.Headline4</item>
        <item name="textAppearanceHeadline5">@style/Custom.TextAppearance.Headline5</item>
        <item name="textAppearanceHeadline6">@style/Custom.TextAppearance.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/Custom.TextAppearance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/Custom.TextAppearance.Subtitle2</item>
        <item name="textAppearanceBody1">@style/Custom.TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/Custom.TextAppearance.Body2</item>
        <item name="textAppearanceButton">@style/Custom.TextAppearance.Button</item>
        <item name="textAppearanceCaption">@style/Custom.TextAppearance.Caption</item>
        <item name="textAppearanceOverline">@style/Custom.TextAppearance.Overline</item>
    </style>

</resources>